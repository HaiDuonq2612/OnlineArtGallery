@using Online_Art_Gallery.Models


@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Banner</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Banner")">Banner</a></li>
            <li class="breadcrumb-item active"><a href="#">Create</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Banner Create </h5>
                </div>
                <div class="card-body">

                    <form action="@Url.Action("Create", "Banner")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="">
                                    @if (TempData["name-validation"] != null)
                                    {
                                        <span class="required">@TempData["name-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <input name="picture" type="file" class="form-control">
                                    @if (TempData["picture-validation"] != null)
                                    {
                                        <span class="required">@TempData["picture-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3"></textarea>
                                    @if (TempData["descreption-validation"] != null)
                                    {
                                        <span class="required">@TempData["descreption-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    <select name="status" class="form-control" id="Status">
                                        <option value="true">Show</option>
                                        <option value="false">Hidden</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Submit</button>
                                <a href="@Url.Action("Index","Banner")" class="btn btn-info">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

