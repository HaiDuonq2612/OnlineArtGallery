@using Online_Art_Gallery.Models;

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Category category = ViewBag.Category;
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Category</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Category")">Category</a></li>
            <li class="breadcrumb-item active"><a href="#!">Detail</a></li>
        </ol>
    </div>

    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Category Detail </h5>
                </div>
                <div class="card-body card-detail">
                    <form action="@Url.Action("Update", "Category")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12 ">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Id</label>
                                    <input name="id" type="text" class="form-control" id="Name" placeholder="" value="@category.Id" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="" value="@category.Name" disabled>
                                    @if (TempData["name-validation"] != null)
                                    {
                                        <span class="required">@TempData["name-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <div class="img-detail">
                                        <img src="~/Content/Images/Category/@category.Picture" width="200px" height="200px" alt="Alternate Text" />
                                        <input type="text" name="img" class="d-none" value="img" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3" disabled>@category.Descreption</textarea>
                                    @if (TempData["descreption-validation"] != null)
                                    {
                                        <span class="required">@TempData["descreption-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    @if (category.Status == true)
                                    {
                                        <input name="Status" type="text" class="form-control" id="Status" placeholder="" value="Show" disabled>
                                    }
                                    else
                                    {
                                        <input name="Status" type="text" class="form-control" id="Status" placeholder="" value="Hidden" disabled>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <a href="@Url.Action("Index","Category")" class="btn btn-info">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

