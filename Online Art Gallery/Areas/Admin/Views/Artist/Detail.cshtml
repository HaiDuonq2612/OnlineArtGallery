@using Online_Art_Gallery.Models;
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Artist artist = ViewBag.Artist;
    DateTime s_date = (DateTime)artist.Birth_Date;
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Artist</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Artist")">Artist</a></li>
            <li class="breadcrumb-item active"><a href="#">Detail</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Artist Detail </h5>
                </div>
                <div class="card-body card-detail">
                    <form action="@Url.Action("Update", "Artist")" method="post" enctype="multipart/form-data">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="id" type="text" class="form-control" id="Name" placeholder="" value="@artist.Id" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="" value="@artist.Name" disabled>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <div class="img-detail">
                                        <img src="~/Content/Images/Artist/@artist.Picture" width="200px" height="200px" alt="Alternate Text" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Birth">Birth Date</label>
                                    <input name="birth_date" type="text" class="form-control" value="@s_date.ToString("MMMM dd, yyyy")" disabled id="birth_date" placeholder="" disabled>
                                </div>
                            </div>
                            @if (artist.Death_Date != null)
                            {
                                DateTime date = (DateTime) artist.Death_Date;

                                <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Birth">Death Date</label>
                                    <input name="death_date" type="text" value="@date.ToString("MMMM dd, yyyy")" class="form-control" id="death_date" placeholder="" disabled>
                                </div>
                            </div>
                        }
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="BirthPlace">Birth Place</label>
                                    <input name="birth_place" type="text" class="form-control" id="BirthPlace" placeholder="" value="@artist.Birth_Place" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="style" class="floating-label" for="Style">Style </label>
                                    <input name="style" type="text" class="form-control" id="style" placeholder="" value="@artist.Style" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3" disabled>@artist.Descreption</textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    @if (@artist.Status == true)
                                    {
                                        <input name="Status" type="text" class="form-control" id="Status" placeholder="" value="Show" disabled>
                                    }
                                    else
                                    {
                                        <input name="Status" type="text" class="form-control" id="Status" placeholder="" value="Hidden" disabled>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <a href="@Url.Action("Index","Artist")" class="btn btn-primary">Return</a>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
    </div>

