@using Online_Art_Gallery.Models;

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Artist artist = ViewBag.Artist;
    DateTime s_date = (DateTime)artist.Birth_Date;
    
    DateTime e_date = artist.Death_Date != null ? (DateTime)artist.Death_Date : new DateTime();
    
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Student</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Artist")">Artist</a></li>
            <li class="breadcrumb-item active"><a href="">Update</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Artist Update </h5>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Update", "Artist")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12 d-none">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="id" type="text" class="form-control" id="Name" placeholder="" value="@artist.Id">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="" value="@artist.Name">
                                    @if (TempData["name-validation"] != null)
                                    {
                                        <span class="required">@TempData["name-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <div class="img-detail">
                                        <img src="~/Content/Images/Artist/@artist.Picture" width="240px" height="240px" alt="Alternate Text" />
                                    </div>
                                    <input name="picture" type="file" class="form-control">
                                    @if (TempData["picture-validation"] != null)
                                    {
                                        <span class="required">@TempData["picture-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Birth">Birth Date</label>
                                    <input name="birth_date" type="date" class="form-control" id="birth_date" placeholder="">
                                    @if (TempData["birth_date-validation"] != null)
                                    {
                                        <span class="required">@TempData["birth_date-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Birth">Death Date</label>
                                    <input name="death_date" type="date" class="form-control" id="death_date" placeholder="">
                                    @if (TempData["death_date-validation"] != null)
                                    {
                                        <span class="required">@TempData["death_date-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="BirthPlace">Birth Place</label>
                                    <input name="birth_place" type="text" class="form-control" id="BirthPlace" placeholder="" value="@artist.Birth_Place">
                                    @if (TempData["birth_place-validation"] != null)
                                    {
                                        <span class="required">@TempData["birth_place-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="style" class="floating-label" for="Style">Style </label>
                                    <select name="style" class="form-control" id="Style">
                                        <option value="@artist.Style">@artist.Style</option>
                                        <option value="Impressionism">Impressionism</option>
                                        <option value="Post Impressionism">Post Impressionism</option>
                                        <option value="Fauvism">Fauvism</option>
                                        <option value="Expressionism">Expressionism </option>
                                        <option value="Cubism">Cubism </option>
                                        <option value="Cubism">Futurism </option>
                                        <option value="Dadaism">Dadaism</option>
                                        <option value="Surrealism">Surrealism</option>
                                        <option value="Abstract Expressionism">Abstract Expressionism</option>
                                        <option value="Kinetic Art">Kinetic Art </option>
                                        <option value="Pop Art">Pop Art</option>
                                        <option value="Op Art">Op Art</option>
                                        <option value="Minimalism">Minimalism</option>
                                        <option value="Conceptual Art">Conceptual Art</option>
                                    </select>
                                    @if (TempData["style-validation"] != null)
                                    {
                                        <span class="required">@TempData["style-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3">@artist.Descreption</textarea>
                                    @if (TempData["descreption-validation"] != null)
                                    {
                                        <span class="required">@TempData["descreption-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    <select name="status" class="form-control" id="Status">
                                        <option value="true">Show</option>
                                        <option value="false">Hidden</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Submit</button>
                                <a href="@Url.Action("Index","Artist")" class="btn btn-danger">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var s_day = @s_date.Day;
            var s_month = @s_date.Month;
            var s_year = @s_date.Year;

            if (s_month < 10) s_month = "0" + s_month;
            if (s_day < 10) s_day = "0" + s_day;

            var s_today = s_year + "-" + s_month + "-" + s_day;
            $("#birth_date").attr("value", s_today);


            var e_day = @e_date.Day;
            var e_month = @e_date.Month;
            var e_year = @e_date.Year;
            if (e_day < 10) e_day = "0" + e_day;
            if (e_month < 10) e_month = "0" + e_month
            var e_today = e_year + "-" + e_month + "-" + e_day;
            $("#death_date").attr("value", e_today);
        });


    </script>

}