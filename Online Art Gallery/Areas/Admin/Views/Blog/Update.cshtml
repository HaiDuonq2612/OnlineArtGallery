@using Online_Art_Gallery.Models;

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Blog blog = ViewBag.Blog;
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Blog</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Blog")">Blog</a></li>
            <li class="breadcrumb-item active"><a href="#!">Update</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Blog Update </h5>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Update", "Blog")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12 d-none">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="id" type="text" class="form-control" id="Name" placeholder="" value="@blog.Id">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="" value="@blog.Name">
                                    @if (TempData["name-validation"] != null)
                                    {
                                        <span class="required">@TempData["name-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <div class="img-detail">
                                        <img src="~/Content/Images/Blog/@blog.Picture" width="200px" height="200px" alt="Alternate Text" />
                                    </div>
                                    <input name="picture" type="file" class="form-control" value="@blog.Picture">
                                    @if (TempData["picture-validation"] != null)
                                    {
                                        <span class="required">@TempData["picture-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Detail">Detail</label>
                                    <textarea name="detail" class="form-control" id="Detail">@Html.Raw(@blog.Detail)</textarea>
                                    @if (TempData["detail-validation"] != null)
                                    {
                                        <span class="required">@TempData["detail-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3">@blog.Descreption</textarea>
                                    @if (TempData["descreption-validation"] != null)
                                    {
                                        <span class="required">@TempData["descreption-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    @if (blog.Status == true)
                                    {
                                        <select name="status" class="form-control" id="Status">
                                            <option value="true">Show</option>
                                            <option value="false">Hidden</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select name="status" class="form-control" id="Status">
                                            <option value="false">Hidden</option>
                                            <option value="true">Show</option>
                                        </select>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Submit</button>
                                <a href="@Url.Action("Index","Blog")" class="btn btn-info">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        CKEDITOR.replace("Detail");
    </script><br />
}

