@using Online_Art_Gallery.Models
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    Artwork artwork = ViewBag.Artwork;
    DateTime date = (DateTime)artwork.Year;
    User user = ViewBag.User;
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Artwork</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Artwork")">Artwork</a></li>
            <li class="breadcrumb-item active"><a href="#">Detail</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Artwork Detail </h5>
                </div>
                <div class="card-body card-detail">
                    <form action="@Url.Action("Update", "Artwork")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12 d-none">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="id" type="text" class="form-control" id="Name" placeholder="" value="@artwork.Id" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="" value="@artwork.Name" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <div class="img-detail">
                                        <img src="~/Content/Images/Artwork/@artwork.Picture" width="200px" height="200px" alt="Alternate Text" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Price</label>
                                    <input name="price" type="number" class="form-control" id="Price" placeholder="" value="@artwork.Price" disabled>
                                </div>
                            </div>
                            @if (artwork.Sale_Price != 0)
                            {
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="floating-label" for="Name">Sale Price</label>
                                        <input name="sale_price" type="number" class="form-control" id="Sale_Price" placeholder="" value="@artwork.Sale_Price" disabled>
                                    </div>
                                </div>
                            }
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Year</label>
                                    <input name="year" type="text" class="form-control" id="Year" placeholder="" data-val="true" value="@date.ToString("MMMM dd, yyyy")" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Size">Size</label>
                                    <input name="size" type="text" class="form-control" id="Size" placeholder="" value="@artwork.Size" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Type">Type</label>
                                    <input name="type" type="text" class="form-control" id="Type" placeholder="" value="@artwork.Type" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Material">Technique</label>
                                    <input name="material" type="text" class="form-control" id="Technique" placeholder="" value="@artwork.Technique" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="Artist" class="floating-label" for="Artist">Artist </label>
                                    <input name="Artist" type="text" class="form-control" id="Artist" placeholder="" value="@artwork.Artist.Name" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="parent_Id" class="floating-label" for="Category">Category </label>
                                    <input name="Category" type="text" class="form-control" id="Category" placeholder="" value="@artwork.Category.Name" disabled>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="parent_Id" class="floating-label" for="Category">Owner </label>
                                    <input name="Category" type="text" class="form-control" id="Category" placeholder="" value="@user.Name" disabled>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3" disabled>@artwork.Descreption</textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    @if (artwork.Status == true)
                                    {
                                        <input name="Status" type="text" class="form-control" id="Status" placeholder="" value="Show" disabled>
                                    }
                                    else
                                    {
                                        <input name="Status" type="text" class="form-control" id="Status" placeholder="" value="Hidden" disabled>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <a href="@Url.Action("Index","Artwork")" class="btn btn-primary">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

