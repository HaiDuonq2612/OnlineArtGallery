@using Online_Art_Gallery.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Artwork</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Artwork")">Artwork</a></li>
            <li class="breadcrumb-item active"><a href="#">Create</a></li>
        </ol>
    </div>
    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Artwork Create </h5>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Create", "Artwork")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="">
                                    @if (TempData["name-validation"] != null)
                                    {
                                        <span class="required">@TempData["name-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group fill">
                                    <label class="floating-label" for="Icon"> Image</label>
                                    <input name="picture" type="file" class="form-control">
                                    @if (TempData["picture-validation"] != null)
                                    {
                                        <span class="required">@TempData["picture-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Price</label>
                                    <input name="price" type="number" class="form-control" id="Price" placeholder="">
                                    @if (TempData["price-validation"] != null)
                                    {
                                        <span class="required">@TempData["price-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Sale Price</label>
                                    <input name="sale_price" type="number" class="form-control" id="Sale_Price" placeholder="">
                                    @if (TempData["sale_price-validation"] != null)
                                    {
                                        <span class="required">@TempData["sale_price-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Year</label>
                                    <input name="year" type="date" class="form-control" id="Year" placeholder="">
                                    @if (TempData["year-validation"] != null)
                                    {
                                        <span class="required">@TempData["year-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Size">Size</label>
                                    <input name="size" type="text" class="form-control" id="Size" placeholder="">
                                    @if (TempData["size-validation"] != null)
                                    {
                                        <span class="required">@TempData["size-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Type">Type</label>
                                    <input name="type" type="text" class="form-control" id="Type" placeholder="">
                                    @if (TempData["type-validation"] != null)
                                    {
                                        <span class="required">@TempData["type-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Technique">Technique</label>
                                    <input name="technique" type="text" class="form-control" id="Technique" placeholder="">
                                    @if (TempData["technique-validation"] != null)
                                    {
                                        <span class="required">@TempData["technique-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="parent_Id" class="floating-label" for="Artist">Artist </label>
                                    <select name="id_artist" class="form-control" id="Artist">
                                        <option value=""></option>
                                        @foreach (var artist in ViewData["artists"] as List<Artist>)
                                        {
                                            <option value="@artist.Id">@artist.Name</option>
                                        }
                                    </select>
                                    @if (TempData["id_artist-validation"] != null)
                                    {
                                        <span class="required">@TempData["id_artist-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label name="parent_Id" class="floating-label" for="Category">Category </label>
                                    <select name="id_category" class="form-control" id="Category">
                                        <option value=""></option>
                                        @foreach (var category in ViewData["categorys"] as List<Category>)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    @if (TempData["id_category-validation"] != null)
                                    {
                                        <span class="required">@TempData["id_category-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3"></textarea>
                                    @if (TempData["descreption-validation"] != null)
                                    {
                                        <span class="required">@TempData["descreption-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    <select name="status" class="form-control" id="Status">
                                        <option value="true">Show</option>
                                        <option value="false">Hidden</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Submit</button>
                                <a href="@Url.Action("Index","Artwork")" class="btn btn-danger">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

