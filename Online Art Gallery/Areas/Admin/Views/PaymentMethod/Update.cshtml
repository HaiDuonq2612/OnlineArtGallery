@using Online_Art_Gallery.Models;

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    PaymentMethod payment = ViewBag.PaymentMethod;
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-0">Payment Method</h4>
    <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"><i class="feather icon-home"></i></a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","PaymentMethod")">Payment Method</a></li>
            <li class="breadcrumb-item active"><a href="#!">Update</a></li>
        </ol>
    </div>

    <div class="row">
        <!-- subscribe start -->
        <div class="col-lg-8 col-12 mx-auto">
            <div class="card">
                <div class="card-header card-header-form">
                    <h5>Payment Method Update </h5>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Update", "PaymentMethod")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-12 d-none">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="id" type="text" class="form-control" id="Name" placeholder="" value="@payment.Id">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Name</label>
                                    <input name="name" type="text" class="form-control" id="Name" placeholder="" value="@payment.Name">
                                    @if (TempData["name-validation"] != null)
                                    {
                                        <span class="required">@TempData["name-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Descreption">Descreption</label>
                                    <textarea name="descreption" class="form-control" id="Descreption" rows="3">@payment.Descreption</textarea>
                                    @if (TempData["descreption-validation"] != null)
                                    {
                                        <span class="required">@TempData["descreption-validation"]</span>
                                    }
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Status"> Status</label>
                                    @if (payment.Status == true)
                                    {
                                        <select name="status" class="form-control" id="Status">
                                            <option value="true">Show</option>
                                            <option value="false">Hidden</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select name="status" class="form-control" id="Status">
                                            <option value="false">Hidden</option>
                                            <option value="true">Show</option>
                                        </select>
                                    }
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Submit</button>
                                <a href="@Url.Action("Index","PaymentMethod")" class="btn btn-danger">Return</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- subscribe end -->
    </div>
</div>

