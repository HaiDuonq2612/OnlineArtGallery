@using Online_Art_Gallery.Models;

@model PagedList.IPagedList<Blog>

@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- PAGE BANNER SECTION -->
<div class="page-banner-section section page-banner-aboutus">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="page-banner-content">
                    <h1>Blog</h1>
                    <ul class="breadcrumb">
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="active">Blog page</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE SECTION START -->
<!-- PAGE SECTION START -->
<div class="page-section section pt-120 pb-45">
    <div class="container">
        <div class="title-eltdf pb-100">
            <p class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.5s">History of art department</p>
            <div class="eltdf-st-title">
                <span class="eltdf-st-title-inner">
                    <span class="eltdf-st-side-line-left wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1.5s"></span>
                    <h1 class="wow fadeInUp " data-wow-duration="1s" data-wow-delay="1s">
                        Blog List
                    </h1>
                    <span class="eltdf-st-side-line-right wow fadeInRight" data-wow-duration="1s" data-wow-delay="1.5s"></span>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                @foreach (var blog in Model)
                {
                    <!-- Blog Item -->
                    <div class="blog-item mb-75">
                        <!-- Image -->
                        <a href="@Url.Action("Detail","Blog", new { id = blog.Id })" class="image"><img src="~/Content/Images/Blog/@blog.Picture" alt=""></a>
                        <!-- Content -->
                        <div class="content fix">
                            <!-- Date -->
                            <span class="date">
                                @{
                                    DateTime date = (DateTime)@blog.Date;
                                }
                                <span class="day">@date.ToString("dd")</span>
                                <span class="month">/ @date.ToString("MMM yyyy")</span>
                            </span>
                            <!-- Title -->
                            <h4 class="title"><a href="blog-details.html">@blog.Name</a></h4>
                            <p>@blog.Descreption</p>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="row">
            <div class="text-center col-xs-12 mt-30">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
<!-- PAGE SECTION END -->
